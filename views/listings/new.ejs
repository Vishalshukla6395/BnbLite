<%layout("layouts/boilerplate")%>
    <div class="row mt-3 mb-5">
        <div class="col-8 offset-2">
            <h3>Add a new Listing</h3>
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title">Title</label>
                    <input type="text" name="details[title]" placeholder="enter title" class="form-control" id="title" required>
                    <div class="invalid-feedback">Please enter valid title</div>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="description">Description</label>
                    <textarea type="text" name="details[description]" placeholder="add a catchy description"
                        class="form-control" id="description" required></textarea>
                    <div class="invalid-feedback">Please enter valid description</div>
                </div>
                <div class="mb-3">
                    <label for="image">Upload Image</label>
                    <input type="file" name="details[image]" class="form-control"
                        id="image" required>
                    <div class="invalid-feedback">Please choose an image</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price">Price</label>
                        <input type="number" name="details[price]" placeholder="2200" class="form-control" id="price" required>
                        <div class="invalid-feedback">Please enter valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country">Country</label>
                        <input type="text" name="details[country]" placeholder="India" class="form-control"
                            id="country" required>
                            <div class="invalid-feedback">Please enter valid country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location">Location</label>
                    <input type="text" name="details[location]" placeholder="Jaipur,Rajasthan" class="form-control"
                        id="location" required>
                        <div class="invalid-feedback">Please enter valid location</div>
                </div>
                <button class="btn btn-primary add-btn mt-3"><i class="fa fa-plus-square"></i> Add</button>
            </form>

        </div>
    </div>